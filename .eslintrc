{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
  },
  "rules": {
    "strict": 0,
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "indent": ["error", 2],
    "func-names": 0,
    "comma-dangle": 0,
    "prefer-template": 0,
    "camelcase": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 0,
    "no-bitwise": ["error", {
      "allow": ["~"]
    }]
  },
  "globals": {
    "describe": true,
    "it": true,
    "after": true,
    "afterEach": true,
    "before": true,
    "beforeEach": true,
    "expect": true,
    "should": true,
    "jest": true
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
